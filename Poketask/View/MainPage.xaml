<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Poketask.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:entities="clr-namespace:Poketask.Entities"
    xmlns:model="clr-namespace:Poketask.Model"
    xmlns:viewmodel="clr-namespace:Poketask.ViewModel"
    x:DataType="viewmodel:MainViewModel"
    Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <entities:CapitalizeConverter x:Key="CapitalizeConverter" />
    </ContentPage.Resources>
    <StackLayout BackgroundColor="#f4f7ff">
        <ActivityIndicator
            HorizontalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand"
            Color="#2480d4" />
        <Grid
            Padding="7"
            BackgroundColor="#2480d4"
            ColumnDefinitions="1*, 5*"
            ColumnSpacing="15"
            IsVisible="{Binding IsNotBusy}"
            MinimumHeightRequest="60"
            VerticalOptions="Fill">
            <Image
                Grid.Column="0"
                HeightRequest="50"
                Source="pokeball.png" />
            <Label
                Grid.Column="1"
                FontFamily="SpaceMonoRegular"
                FontSize="23"
                HorizontalTextAlignment="Start"
                Text="{Binding Title}"
                TextColor="White"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center" />
        </Grid>
        <CollectionView
            IsVisible="{Binding IsNotBusy}"
            ItemsSource="{Binding CurrentPokemonsCredits}"
            VerticalOptions="FillAndExpand">
            <CollectionView.EmptyView>
                <Label
                    FontFamily="SpaceMonoRegular"
                    FontSize="30"
                    Text="No data"
                    TextColor="#2480d4" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Credits">
                    <Grid
                        Margin="12,12,12,0"
                        Padding="0,0,2,0"
                        MaximumWidthRequest="500">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="PokemonTapped" />
                        </Grid.GestureRecognizers>
                        <Border
                            Padding="6"
                            BackgroundColor="White"
                            Stroke="#e0e0e0"
                            StrokeShape="RoundRectangle 5,5,5,5">
                            <Label
                                FontFamily="SpaceMonoRegular"
                                FontSize="25"
                                HorizontalTextAlignment="Center"
                                Text="{Binding name, Converter={StaticResource CapitalizeConverter}}" />
                            <Border.Shadow>
                                <Shadow
                                    Brush="#a1a1a1"
                                    Opacity="0.4"
                                    Radius="80"
                                    Offset="0, 100" />
                            </Border.Shadow>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid Padding="12">
            <Button
                BackgroundColor="#2480d4"
                Command="{Binding ShowMore}"
                FontFamily="SpaceMonoRegular"
                FontSize="20"
                IsVisible="{Binding NotAllPokemonsAreShowed}"
                MaximumWidthRequest="500"
                Text="Show more" />
        </Grid>
    </StackLayout>
</ContentPage>
